<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyCarManualesFragment"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.design.button.MaterialButton
        android:id="@+id/officialPageButton"
        android:layout_width="@dimen/my_car_manual_buttons"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/my_card_official_page_button_title"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textColor="@color/white"
        app:icon="@drawable/ic_web_black_24dp"
        app:rippleColor="@color/colorPrimaryLight" />

    <android.support.design.button.MaterialButton
        android:id="@+id/manualButton"
        android:layout_width="@dimen/my_car_manual_buttons"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/my_card_manual_button_title"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textColor="@color/white"
        app:icon="@drawable/ic_library_books_black_24dp"
        app:rippleColor="@color/colorPrimaryLight" />

    <android.support.design.button.MaterialButton
        android:id="@+id/techicalDetailButton"
        android:layout_width="@dimen/my_car_manual_buttons"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/my_card_technical_details_button_title"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textColor="@color/white"
        app:icon="@drawable/ic_build_black_24dp"
        app:rippleColor="@color/colorPrimaryLight" />



</LinearLayout>