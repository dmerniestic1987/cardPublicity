<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WellcomeChasisActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_wellcome_chasis"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/profile"
        android:layout_gravity="center"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido Martín Gerona"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Necesitamos el número de chasis o patente para conectar su auto a la App."
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical|end"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/escanearChasisButtton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:drawableLeft="@drawable/ic_camera_enhance_black_24dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Escanear chasis"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:drawableTint="@color/white"
        android:paddingLeft="40dp"/>

    <Button
        android:id="@+id/digitarChasisButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:drawableLeft="@drawable/ic_car_of_hatchback_model"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Ingresar chasis"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:drawableTint="@color/white"
        android:paddingLeft="40dp"/>

    <Button
        android:id="@+id/ingresarPatente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Ingresar patente"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableTint="@color/white"
        android:layout_margin="15dp"
        android:paddingLeft="40dp"/>

</LinearLayout>