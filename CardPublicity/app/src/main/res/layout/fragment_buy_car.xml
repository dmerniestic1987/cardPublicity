<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BuyCarFragment"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:transitionName="Imagen transición"
                            android:src="@drawable/fiat_nuevo"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="NUEVOS"
                            android:background="@color/colorPrimaryLight"
                            android:padding="@dimen/card_gridView_padding"
                            android:layout_gravity="bottom"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@android:color/white"
                            android:textAlignment="center"/>
                    </FrameLayout>

                    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:transitionName="Imagen transición"
                            android:src="@drawable/fiat_usado"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="USADOS"
                            android:background="@color/colorPrimaryLight"
                            android:padding="@dimen/card_gridView_padding"
                            android:layout_gravity="bottom"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@android:color/white"
                            android:textAlignment="center"/>
                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MARCAS TOP"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/material_text_title"
                    android:textColor="@color/white"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <include layout="@layout/brand_car_button_bar"/>
                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NUEVOS MÁS VISITADOS"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/material_text_title"
                    android:textColor="@color/white"/>

                <include layout="@layout/list_car_cards"/>

        </LinearLayout>


    </ScrollView>




</LinearLayout>