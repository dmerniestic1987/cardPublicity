<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryLight"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/fiatCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="@dimen/card_recycler_elevation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="@dimen/card_gridView_padding">

            <ImageView
                android:id="@+id/imageView2"

                android:layout_width="@dimen/card_view_button_bar_width"
                android:layout_height="@dimen/card_view_button_bar_height"
                app:srcCompat="@drawable/fiat_logo"
                android:contentDescription="Fiat Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fiat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/toyotaCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="@dimen/card_recycler_elevation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="@dimen/card_gridView_padding">

            <ImageView
                android:id="@+id/imageToyota"

                android:layout_width="@dimen/card_view_button_bar_width"
                android:layout_height="@dimen/card_view_button_bar_height"
                app:srcCompat="@drawable/toyota_logo"
                android:contentDescription="Toyota Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toyota"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/vwCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="@dimen/card_recycler_elevation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="@dimen/card_gridView_padding">

            <ImageView
                android:id="@+id/imageVw"

                android:layout_width="@dimen/card_view_button_bar_width"
                android:layout_height="@dimen/card_view_button_bar_height"
                app:srcCompat="@drawable/vw_logo"
                android:contentDescription="VW Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volkswagen"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/peugeotCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
        android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
        android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
        app:cardBackgroundColor="@color/colorPrimary"
        card_view:cardElevation="@dimen/card_recycler_elevation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="@dimen/card_gridView_padding">

            <ImageView
                android:id="@+id/imagePeugeot"

                android:layout_width="@dimen/card_view_button_bar_width"
                android:layout_height="@dimen/card_view_button_bar_height"
                app:srcCompat="@drawable/peugeot_logo"
                android:contentDescription="Puegeot Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peugeot"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
