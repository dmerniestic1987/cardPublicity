<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MyCarInfoFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:id="@+id/imageSlider"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_margin="@dimen/card_margin_horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/text_margin">

                    <TextView
                        android:id="@+id/myCarItemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fiat Toro"
                        android:textSize="@dimen/material_text_title"
                        android:textColor="@color/itemTitleTextColor"
                        />

                    <TextView
                        android:id="@+id/myCarItemChasis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:text="Chasis: ABX8876DFD76GF22F"
                        android:textSize="@dimen/material_text_subhead"/>

                    <TextView
                        android:id="@+id/myCarItemPatente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Patente: AB 123 CD" />

                    <TextView
                        android:id="@+id/mayCarInfoyear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Año: 2019" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">
                        <android.support.design.button.MaterialButton
                            android:id="@+id/officialPageButton"
                            android:layout_width="@dimen/my_car_manual_buttons"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="8dp"
                            android:text="Turno service"
                            android:textAppearance="?android:attr/textAppearanceButton"
                            android:textColor="@color/white"
                            app:icon="@drawable/ic_schedule_black_24dp"
                            app:rippleColor="@color/colorPrimaryLight"
                            android:layout_gravity="center"/>
                    </LinearLayout>



                    <View
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryLight" />

                    <TextView
                        android:id="@+id/myTraction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Tracción: 4 ruedas" />

                    <TextView
                        android:id="@+id/myTraction2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Tipo de cambio: Manual" />

                    <TextView
                        android:id="@+id/veolcidades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Velocidades: 6" />

                    <View
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryLight" />

                    <TextView
                        android:id="@+id/myCarConceionario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Concesionarios del Sur" />

                    <TextView
                        android:id="@+id/concesionarioDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Dirección: Av. Santa Cruz 6653 CABA" />

                    <TextView
                        android:id="@+id/myCarConceionarioVendedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Vendedor: Martín Gerona" />

                    <TextView
                        android:id="@+id/comunicate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_margin_very_small"
                        android:textColor="@color/itemTextColor"
                        android:textSize="@dimen/material_text_subhead"
                        android:text="Comunicate:" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_telephone"
                            android:tint="@color/colorAccent"
                            android:layout_margin="16dp"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_whatsapp"
                            android:layout_margin="16dp"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_facebook"
                            android:layout_margin="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_instagram"
                            android:layout_margin="16dp"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_skype"
                            android:layout_margin="16dp"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_mail_black_24dp"
                            android:layout_margin="16dp"
                            android:tint="@color/colorAccent"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            </ScrollView>
        </LinearLayout>

</FrameLayout>